<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutJob"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/imgOffer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/anon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtRvJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Junior Web Developer at Coursera 800$ a year"
            android:textColor="#272424"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewPostedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posted by"
                android:textColor="#FF272424"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtRvJobUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:text="Loading..."
                android:textColor="#FF272424"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtRvJobSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="PHP LARAVEL COMPOSER C# BASE NET STUDIO C MARK STUDIO MARK STUDIO"
            android:textAlignment="viewStart"
            android:textColor="#FF272424"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRvJobDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="I need someone to do my job to as a software developer or whatever lorem ipsum dolor sir amet lorem ipsum dolor sira met SKILL WORK dolor sir amet worw work wowkroasdk ajkds ajdsaj jdas jhadsj adsj "
            android:textAlignment="viewStart"
            android:textColor="#FF272424"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>