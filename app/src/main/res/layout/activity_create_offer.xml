<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".view.CreateOfferActivity">

    <TextView
        android:id="@+id/TextView100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Post Up a Job Offer"
        android:textColor="#272424"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Name"
        android:textColor="#272424" />

    <EditText
        android:id="@+id/txtCreateOfferTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Full Stack Web Developer at My Company"
        android:inputType="textPersonName"
        android:textColor="#272424" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Prerequisite Skills"
        android:textColor="#272424" />

    <EditText
        android:id="@+id/txtCreateOfferSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="PHP Laravel C# C++ Django Flutter Kotlin"
        android:inputType="textPersonName"
        android:textColor="#272424" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Job Description"
        android:textColor="#272424" />

    <EditText
        android:id="@+id/txtCreateOfferDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Job require you to handle the server of our webserver as well as the front end"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnCreateOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Up" />
</LinearLayout>