<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp">

    <ImageButton
        android:id="@+id/btnOfferDetailClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/ic_baseline_close_24_dark" />

    <TextView
        android:id="@+id/txtDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtOfferDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Junior Web Developer at Coursera 800$ a year"
        android:textColor="#272424"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtOfferDetailSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PHP, Laravel, Skill"
        android:textColor="#2B2828"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/anon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOfferDetailUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Microsoft"
                android:textColor="#2B2828"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOfferDetailUserLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surabaya Jakarta"
                android:textColor="#2B2828" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtOfferDetailBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer dictum elementum nunc vehicula posuere. Mauris nec finibus neque. Duis dictum tellus id metus ullamcorper, eget pulvinar eros sollicitudin. Pellentesque risus risus, pulvinar eget ornare id, rhoncus sed nulla. Morbi ex ligula, rhoncus sed augue eget, suscipit malesuada quam. Pellentesque pharetra augue sed ante laoreet, sit amet malesuada orci scelerisque. Vestibulum eget est non leo rutrum tempus nec sed purus."
        android:textColor="#2B2828" />

    <Button
        android:id="@+id/btnOfferDetailApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Apply" />

</LinearLayout>